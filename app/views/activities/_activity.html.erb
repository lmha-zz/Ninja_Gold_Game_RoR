<% if (activity.gold > 0) %>
  <p class="earn">Earned <%= activity[:gold] %> gold from the <%= activity[:location] %>! (<%= activity[:created_at].strftime('%Y/%m/%d %H:%M %a') %>)</p>
<% else %>
  <p class="lose">Entered <%= activity[:location] %> and lost <%= activity[:gold].abs %> gold..... Ouch. (<%= activity[:created_at].strftime('%Y/%m/%d %H:%M %a') %>)</p>
<% end %>